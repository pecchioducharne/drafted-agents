# MCP Server Environment Variables
# Copy this file to .env.mcp and fill in your actual keys
# DO NOT commit .env.mcp to Git!

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
# Required scopes: repo
GITHUB_TOKEN=your_github_token_here

# Perplexity API Key
# Get from: https://www.perplexity.ai/account/api/group
PERPLEXITY_API_KEY=your_perplexity_key_here

# Notion API Key (if using manual Notion MCP setup)
NOTION_API_KEY=your_notion_key_here

# Netlify Access Token
NETLIFY_AUTH_TOKEN=your_netlify_token_here

# Firebase Project ID
FIREBASE_PROJECT_ID=drafted-6c302

# Anthropic API Key
ANTHROPIC_API_KEY=your_anthropic_key_here
